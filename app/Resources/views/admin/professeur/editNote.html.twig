{% extends 'base.html.twig' %}

{% block title %}
    {% if note.idNote %}
        {{ parent() }} - Modification d'une note{{ note.idNote }}
    {% else %}
        {{ parent() }} - Ajout d'une note
    {% endif %}
{% endblock %}

{% block body %}
    <a href="{{ path ('logout') }}">DÃ©connexion</a>
