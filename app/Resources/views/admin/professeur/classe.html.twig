{% block body %}
    <div class="tableau">
        <ol class="breadcrumb">
            <li><a href="{{ path('admin_professeur_homepage') }}">Accueil</a></li>
            <li class="active">Classe</li>
        </ol>
    <h1>Liste des classes de : </h1>

    <table class="table" id="cadre" border="" >
        <thead class="thead-inverse">
        <th>Classe</th>
