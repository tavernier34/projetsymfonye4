{% extends 'base.html.twig' %}

{% block title %}
    Ajouter une Note
{% endblock %}
{% block body %}
    <p>{{ app.user.username }} - <a id="deconnexion" style="text-decoration: underline;" href="{{ path ('logout') }}"  > DÃ©connexion</a> </p>

    <ol class="breadcrumb">
        <li><a href="{{ path('admin_professeur_homepage') }}">Accueil</a></li>
        <li class="active">Ajouter une note</li>
    </ol>


<h2>Ajouter une Note</h2>
<div id="formulaire">

    <form action="{{ path('admin_professeur_addnoteindex') }}" method="post" {{ form_enctype(form) }}>
        <table class="editab" border="">
            <tr>
                {{ form_errors(form) }}
                <td class="addelevenote">{{ form_row(form.note) }}</td>
            </tr>
            <tr>
                <td class="addelevemodule">{{ form_row(form.idModule) }}</td>
            </tr>
            <tr>
                <td class="addelevenom">{{ form_row(form.idEleve) }}</td>
            </tr>
            <tr>
                <td class="addelevecoef" >{{ form_row(form.coef) }}</td>
            </tr>
            <tr>
                <td>{{ form_row(form.dateNote) }}</td>
            </tr>


            {{ form_rest(form) }}
        </table>
        <input class="btn-success" type="submit" id="submit" value="{{ 'Ajouter'}}" name="submit" />
    </form>
</div>
{% endblock %}
