{% extends 'base.html.twig' %}


{% block title %}
    Liste des absences
{% endblock %}

{% block body %}
    <p>{{ app.user.username }} - <a id="deconnexion" style="text-decoration: underline;" href="{{ path ('logout') }}"  > DÃ©connexion</a> </p>
    <div class="tableau">
        <ol class="breadcrumb">
            <li><a href="{{ path('admin_eleve_homepage') }}">Accueil</a></li>
            <li class="active">Absences</li>
        </ol>
        <h1>Liste des absences de : </h1>

        <table class="table" border="">
            <thead class="thead-inverse">
            <th>Justificatif</th>
            <th>Motif</th>
            </thead>
            {% for absence in arrayAbsences %}
            <tbody>
            <tr>
                <td>
                    {% if absence.justificatif == 1 %}
                        Oui
                    {% else %}
                        Non
                    {% endif %}
                </td>
                <td>{{ absence.motif }}</td>
            </tr>
            {% else %}
                <tr><td>Vous n'avez pas encore d'absence(s).</td></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

